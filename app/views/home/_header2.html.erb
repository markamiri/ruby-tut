<div class="navbar2">
  <div class="navbar2-section left">
    <%= link_to root_path, class: "logo-link" do %>
  <% if @current_logo&.image&.attached? %>
    <%= image_tag @current_logo.image,
                  alt: "Site Logo",
                  class: "navbar-logo",
                  width: 120,
                  height: 120 %>
  <% else %>
    Logo here
  <% end %>
<% end %>

  </div>

  <div class="navbar2-section middle"> 
    <ul class="nav-links">
        <li class= "dropdown">
          <a href="#">CATEGORIES</a>
          <ul class = "dropdown-menu">
            <% @categories.each do |category|%>
              <li><%= link_to category.name, category_page_path(category.slug)  %></li>
            <% end%>
            </ul>
        </li>


        <li><a href="#">NEW LISTINGS</a></li>
        <li><a href="#">SERVICES</a></li>
        <li><a href="#">ABOUT US</a></li>
        <li class = "nav-item">
            <% if user_signed_in? %>
                <%= link_to "Admin",
                    categories_path,
                    class: "nav-link"%>
            <% else %>
                <%= link_to "Admin",
                    admin_path,
                    class: "nav-link" %>
            
            <% end %>
        </li>
    </ul>
  </div>

  <div class="navbar2-section right">
    <div class="header-right">
      <!-- Search -->
      <form class="search" action="#" role="search">
        <input class="search-input" type="search" placeholder="Search..." aria-label="Search">
        <button class="search-btn" aria-label="Search">
          <!-- magnifier icon -->
          <svg viewBox="0 0 24 24" width="18" height="18" fill="none" stroke="currentColor" stroke-width="2">
            <circle cx="11" cy="11" r="7"></circle>
            <line x1="16.5" y1="16.5" x2="21" y2="21"></line>
          </svg>
        </button>
      </form>

      <!-- Icons -->
      <div class="icon-row">
        <!-- User -->
       <% if user_signed_in? %>
          <%= link_to destroy_user_session_path,
                      data: { turbo_method: :delete },
                      class: "icon",
                      aria: { label: "Log Out" } do %>
            <svg viewBox="0 0 24 24" width="22" height="22" fill="none" stroke="currentColor" stroke-width="1.8">
              <path d="M4 20c0-4 4-6 8-6s8 2 8 6"></path>
              <circle cx="12" cy="8" r="4"></circle>
            </svg>
          <% end %>
        <% else %>
          <%= link_to admin_path, class: "icon", aria: { label: "Admin" } do %>
            <svg viewBox="0 0 24 24" width="22" height="22" fill="none" stroke="currentColor" stroke-width="1.8">
              <path d="M4 20c0-4 4-6 8-6s8 2 8 6"></path>
              <circle cx="12" cy="8" r="4"></circle>
            </svg>
          <% end %>
        <% end %>
        <!-- Globe -->
        <a href="#" class="icon" aria-label="Language">
          <svg viewBox="0 0 24 24" width="22" height="22" fill="none" stroke="currentColor" stroke-width="1.8">
            <circle cx="12" cy="12" r="9"></circle>
            <path d="M3 12h18M12 3a15 15 0 0 1 0 18M12 3a15 15 0 0 0 0 18"></path>
          </svg>
        </a>
        <!-- Shopping bag -->
        <a href="#" class="icon cart" aria-label="Cart">
          <svg viewBox="0 0 24 24" width="22" height="22" fill="none" stroke="currentColor" stroke-width="1.8">
            <path d="M6 7h12l-1 12H7L6 7z"></path>
            <path d="M9 7V5a3 3 0 0 1 6 0v2"></path>
          </svg>
          <span class="badge">0</span>
        </a>
      </div>
    </div>
  </div>
</div>
